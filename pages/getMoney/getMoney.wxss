.container{
    width: 100%;
    height: 100%;
    overflow: hidden;
}
.home{
    width: 100%;
    height: 400rpx;
    overflow: hidden;
    position: relative;
}
.home-bg{
    width: 100%;
    height: 100%;
    display: block;
}
/* 积分 */
.rewardPoint{
  width: 100%;
  height: 300rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.rewardPoint text{
  width: 100%;
  text-align: center;
  display: inline-block;
  color:#fff;
}
.rewardPoint text:nth-child(1){
  font-size: 1.6em;
  line-height: 150rpx;
}
.rewardPoint text:nth-child(2){
  font-size: 0.8em;
  line-height: 50rpx;
}
/* 列表 */
.rewardContent{
  width: 100%;
  height: auto;
  margin-top: -100rpx;
  z-index: 999;
}
.rewardList{
  padding: 20rpx;
  align-items: center;
}
.rewardLeft{
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.rewardLeft image{
  width: 70rpx;
  height: 70rpx;
   margin-right: 20rpx; 
}
.rewardTitle{
  display: flex;
  flex-direction: column;
}
.rewardTitle text:nth-child(1){
  font-size: 0.9em;
}
.rewardTitle text:nth-child(2){
  font-size: 0.8em;
  color: #9B9B9B;
}
.rewardMoney{
  color: #F10C3B;
}