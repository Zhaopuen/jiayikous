@import"../../wxParse/wxParse.wxss";
.container{
  height: 1000rpx;
  justify-content: flex-start;
}
.index_search{
  width: 95%;
  height: 80rpx;
  margin: 10rpx 50rpx;
  background: #EFEFEF;
  border-radius: 40rpx;
  padding-left: 30rpx; 
  display: flex;
  justify-content: space-between;
}
.index_search input{
  height: 100%;
  font-size: 30rpx;
  text-indent: 20rpx;
}
.index_search image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
  margin-top:20rpx;
}
.guizebox text:nth-child(1){
  line-height:90rpx;
  color:#000;
  font-size:34rpx;
  text-align: center;
  display: block;
}
.guizebox text:nth-child(2){
  line-height:60rpx;
  color:#666;
  font-size:28rpx;
  padding:0 30rpx;
  display: flex;
  justify-content: flex-start;
}
.guizebox{
  padding: 10rpx;
}