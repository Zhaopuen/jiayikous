/* 我的订单切换 */
.swiper-tab{
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  font-size:28rpx;
}
.swiper-tab-item{
  width: 30%; 
  color:#434343;
}
.active{
  color:#7DD9D0;
  border-bottom: 4rpx solid #7DD9D0;
}
swiper{
  text-align: center;
}
.order_manangerBox{
  height:auto;
  overflow-y: auto;
}
scrollbar {
  width: 0px;
}
.order_managebox{
  background:#fff;
  height:auto;
  overflow: hidden;
  border-radius:5px;
  width:94%;
  margin:3%;
}
.order_manage{
  height:auto;
  overflow: hidden;
  padding-bottom:15rpx;
  border-bottom:1px solid #d9d9d9;
}
.order_paieds image{
  width:60rpx !important;
  height:60rpx !important;
  margin-top:20rpx;
  display:block;
  float:left;
  margin-right:10rpx;
}


.order_managebox .order_imgs{
  width:30%;
  height:180rpx;
  display:block;
  float:left;
  margin:2%;
}
.order_managebox .order_title{
  width:64%;
  float:left;
}
.order_managebox .order_title view{
  text-align:left;
  font-size:36rpx;
  line-height:50rpx;
  margin:6% 0 2%;
}
.order_managebox .order_title p{
  text-align:left;
  font-size:28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height:45rpx;
}
.order_payif{
  width:100%;
  height:100rpx;
}
.order_paieds{
  float:left;
  padding-left:10%;
  line-height:100rpx;
  color:#7DD9D0;
}
.order_finished{
  float:right;
  padding-right:10%;
  line-height:100rpx;
  font-size:32rpx;
  color:#ACACAC;
}
.order_finished button{
  height:70rpx;
  background:#7ADCCF;
  line-height: 70rpx;
  font-size:32rpx;
  color:#fff;
  border:none;
  border-radius:50rpx;
  margin-top:15rpx;
}
.order_wuliudetailb{
  height:50rpx;
  background:#7ADCCF;
  color:#333;
}