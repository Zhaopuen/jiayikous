/**index.wxss**/
.indexmall{
  height:auto;
  width:100%;
  overflow: hidden;
  background:#f5f5f5;
}
.container{
  /* height: 1000rpx; */
  justify-content: flex-start;
}
.index_search{
  width: 95%;
  height: 80rpx;
  margin: 10rpx 50rpx;
  background: #EFEFEF;
  border-radius: 40rpx;
  padding-left: 30rpx; 
  display: flex;
  justify-content: space-between;
}
.index_search input{
  height: 100%;
  font-size: 30rpx;
  text-indent: 20rpx;
}
.index_search image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
  margin-top:20rpx;
}
/* 轮播 */
.banner_list{
  width: 100%;
  height: 300rpx;
}
.banner_list swiper{
  width: 100%;
  height: 100%;
}
.banner_list swiper navigator{
  width: 100%;
  height: 100%;
}
.slide-image{
  width: 100%;
  height: 100%;
}
/* 竞购预展规则 */
.index_abs{
  width: 100%;
  height: 1rpx;
  position: relative;
  

}
.abs_tab{
  position: absolute;
  width: 80%;
  height: 150rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  top: -40px;
  left: 0;
  right: 0;
  margin: auto;
  border-radius: 10rpx;
  box-shadow: 0 0 10px 2px #eee;
}
.abs_tab navigator{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 0.8em;
}
.abs_img{
  width: 70rpx;
  height: 70rpx;
}
/* 商品列表 */
.mall_listbox{
  width:100%;
  height:auto;
  overflow: hidden;
}
.mall_list{
  width:94%;
  height:auto;
  overflow: hidden;
  margin:3%;
  border-radius:10rpx;
  background:#fff;
}
.mall_list .mall_list_mallimg{
  width:100%;
  height:300rpx;
  position: relative;
}
.bidMoney{
  width: 96%;
  height: 150rpx;
  background: #fff;
  margin: 2% auto;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  justify-content: center;
}
.bidMoney view{
  width: 50%;
  font-size: 0.8em;
  color: #000;
}
.bidMoney>view text:nth-child(1){
  display: inline-block;
  border: 1px solid #81D8CF;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  border-radius: 50%;
  margin-right: 10rpx;
  color:#81D8CF;
}
.mall_list_title{
  position:absolute;
  z-index:9999;
  bottom:20rpx;
  left:30rpx;
  color:#fff;
}
.mall_list_jingpaiimg{
  position: absolute;
  z-index:999;
  top:0;
  left:30rpx;
  width:68rpx;
  height:170rpx;
}
.mall_list_jingpai{
  position: absolute;
  z-index:999999;
  color:#fff;
  top:0;
  padding:15rpx;
  text-align: center;
  font-size:32rpx;
}
/* 倒计时 */
.daojishi{
  padding:0 20rpx 20rpx;
}
.daojishi image{
  width:44rpx;
  height:44rpx;
  margin-right:10rpx;
  display:block;
  float:left;
  margin-top:5rpx;
}
.daojishi text{
  font-size:0.75em;
  color:#c7c7c7;
}
.mall_collection{
  position:absolute;
  width:80rpx;
  height:80rpx;
  background:#fff;
  border-radius:50%;
  right:30rpx;
  top:30rpx;
}
.mall_collection image{
  width: 100%;
  height: 100%;
}
/* 背景颜色 */
.mall_list_title{
  background: rgba(0,0,0,0.5);
  border-radius: 15rpx;
}

/* 新增需求 */
.swiper-tab{
  width: 100%;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  font-size:28rpx;
}
.swiper-tab-item{
  width: 30%; 
  color:#434343;
}
.active{
  color:#7DD9D0;
  border-bottom: 4rpx solid #7DD9D0;
}
swiper{
  text-align: center;
}