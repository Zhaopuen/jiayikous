@import"../../wxParse/wxParse.wxss";
.pay{
  width:100%;
  height:100%;
  background:#f5f5f5;
  position:fixed;
}
.pay_address{
  width:86%;
  height:auto;
  overflow: hidden;
  margin:3%;
  background: #fff;
  padding:4%;
  border-radius:10rpx;
}
.pay_dizhiimg{
  width:100rpx;
  height:100rpx;
  display: block;
  float:left;
  margin-right:20rpx;
}
.pay_addressname{
  height:100%;
  overflow: hidden;
  float:left;
}
.pay_addressname p{
  font-size:32rpx;
  color:#000;
  display:block;
}
.lineheight{
  line-height: 100rpx;
}
.pay_addressname em{
  font-size:28rpx;
  color:#979797;
}
.pay_jiantouimg{
  width:26rpx;
  height:42rpx;
  display:block;
  float:right;
  margin-top:30rpx;
}
.pay_addressmall{
  width:86%;
  height:auto;
  overflow: hidden;
  margin:3%;
  background: #fff;
  padding:4%;
  border-radius:10rpx;
}
.pay_address_mallbox{
  height:auto;
  overflow: hidden;
  padding-bottom:25rpx;
  border-bottom:1px solid #FBFBFB;
}
.pay_address_mallbox image{
  width:30%;
  height:180rpx;
  display:block;
  float:left;
  margin-right:4%;
}
.pay_address_malltitle{
  width:65%;
  float:left;
  margin-top:3%;
}
.pay_address_malltitle span{
  font-size:34rpx;
  color:#000;
  display:block;
}
.pay_address_malltitle p{
  font-size:28rpx;
  line-height: 50rpx;
  color:#979797;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.pay_pricebox{
  width:100%;
  height:100rpx;
  border-bottom:1px solid #FBFBFB;
  line-height: 100rpx;
}
.pay_pricebox span{
  font-size:32rpx;
  color:#000;
  display:block;
  float:left;
}
.pay_pricebox em{
  color:#000;
  font-size:32rpx;
  float:right;
}
.pay_paybutton button{
  width:94%;
  height:100rpx;
  background:#81D8CF;
  border-radius:50rpx;
  color:#fff;
  line-height:100rpx;
  text-align: center;
  margin:3%;
  position:fixed;
  bottom:3%;
  border-color:#81D8CF;
}
.wxParse-p{
  font-size: 0.65em;
  display: flex;
}
.pay_pricebox textarea{
  font-size: 0.8em;
  width: 100%;
  height: 100%;
}

